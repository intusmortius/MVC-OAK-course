
@{
    ViewBag.Title = "AllComments";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

@model List<DTO.CommentDTO>

<section class="content-header">
    <h1>All Comment List</h1>
    <ol class="breadcrumb float-sm-left">
        <li class="breadcrumb-item"><a>Admin</a></li>
        <li class="breadcrumb-item"><a>Comment</a></li>
        <li class="breadcrumb-item active"><a>All Comment list</a></li>
    </ol>
</section>
<br />
<div class="card-footer">
    <a href="/Admin/Comment/UnapprovedComments"><button class="btn btn-primary">Unapproved Comment List</button></a>
</div>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">DataTable with default features</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Post Title</th>
                    <th>Comment content</th>
                    <th>Email</th>
                    <th>Add Date</th>
                    <th>Approve</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr id="a_@item.ID">
                    <td>
                        @item.PostTitle
                    </td>
                    <td>
                        @item.CommentContent
                    </td>
                    <td>
                        @item.Email
                    </td>
                    <td>
                        @item.AddDate.ToString("dd.MM.yyyy")
                    </td>
                    @if (!item.isApproved)
                    {
                        <td title="Edit" align="center"><a href="/Admin/Comment/ApproveComment2/@item.ID"><i class="fas fa-thumbs-up"></i></a></td>
                    }
                    else
                    {
                        <td>
                            Approved
                        </td>
                    }
                    <td title="Delete" align="center"><a href="#"><i class="fas fa-trash-alt" style="color:red" onclick="AskQuestion('/Admin/Comment/DeleteComment/', @item.ID)"></i></a></td>
                </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>Post Title</th>
                    <th>Comment content</th>
                    <th>Email</th>
                    <th>Add Date</th>
                    <th>Approve</th>
                    <th>Delete</th>
                </tr>
            </tfoot>
        </table>
    </div>
    @Html.Partial("~/Areas/Admin/Views/Shared/ModalMessage.cshtml")
    <!-- /.card-body -->
</div>
<script src="~/Areas/Admin/Content/js/DeleteRecord.js"></script>