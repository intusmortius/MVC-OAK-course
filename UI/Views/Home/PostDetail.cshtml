
@{
    ViewBag.Title = "PostDetail";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}
@model DTO.GeneralDTO
<!-- ##### Breadcrumb Area Start ##### -->

<!-- ##### Breadcrumb Area End ##### -->
<!-- ##### Pager Area Start ##### -->
<div class="featured-post-slides owl-carousel mb-30">
    @foreach (var item in Model.PostDetail.PostImages)
    {
        <div class="single-feature-post video-post bg-img" style="background-image: url(/Areas/Admin/Content/PostImage/@item.ImagePath);width:80% !important; margin: 0 auto !important;">
            <!-- Post Content -->
            

            <!-- Video Duration -->
            <span class="video-duration">05.03</span>
        </div>
    }
</div>
<!-- ##### Pager Area End ##### -->
<!-- ##### Post Details Area Start ##### -->
<section class="post-details-area mb-80">
    <div class="container">
        

        <div class="row justify-content-center">
            <!-- Post Details Content Area -->
            <div class="col-12 col-lg-8">
                <div class="post-details-content d-flex">
                    <!-- Post Share Info -->
                    <div class="post-share-info">
                        <p>Share</p>
                        <a href="#" class="facebook"><i class="fa fa-facebook"></i></a>
                        <a href="#" class="twitter"><i class="fa fa-twitter"></i></a>
                        <a href="#" class="google-plus"><i class="fa fa-google-plus"></i></a>
                        <a href="#" class="instagram"><i class="fa fa-instagram"></i></a>
                        <a href="#" class="thumb-tack"><i class="fa fa-thumb-tack"></i></a>
                    </div>

                    <!-- Blog Content -->
                    <div class="blog-content">

                        <!-- Post Content -->
                        <div class="post-content mt-0">
                            <a href="#" class="post-cata cata-sm cata-danger">@Model.PostDetail.CategoryName</a>
                            <a href="#" class="post-cata cata-sm cata-danger">@Model.PostDetail.Language</a>
                            <a href="single-post.html" class="post-title mb-2">@Model.PostDetail.Title</a>

                            <div class="d-flex justify-content-between mb-30">
                                <div class="post-meta d-flex align-items-center">
                                    <a href="#" class="post-author">OAK Academy</a>
                                    <i class="fa fa-circle" aria-hidden="true"></i>
                                    <a href="#" class="post-date">@Model.PostDetail.AddDate.ToString("dd.MM.yyyy, dddd")</a>
                                </div>
                                <div class="post-meta d-flex">
                                    <a href="#"><i class="fa fa-comments-o" aria-hidden="true"></i> @Model.PostDetail.CommentCount</a>
                                    <a href="#"><i class="fa fa-eye" aria-hidden="true"></i> @Model.PostDetail.ViewCount</a>
                                </div>
                            </div>
                        </div>

                        @Html.Raw(Model.PostDetail.PostContent)

                        <br />

                        <div class="row">
                            <div class="col-12">
                                <div class="section-heading">
                                    <a href="@Model.Adslist[1].Link" target="_blank"><img src="~/Areas/Admin/Content/AdsImage/@Model.Adslist[1].ImagePath" /></a>
                                </div>
                            </div>
                        </div>

                        <!-- Post Tags -->
                        <div class="post-tags mt-30">
                            <ul>
                                @foreach (var item in @Model.PostDetail.TagList)
                                {
                                    <li><a href="#">@item.TagContent</a></li>
                                }
                            </ul>
                        </div>

                        <!-- Post Author -->
                        <div class="vizew-post-author d-flex align-items-center py-5">
                            <div class="post-author-thumb">
                                <img src="img/bg-img/30.jpg" alt="">
                            </div>
                            <div class="post-author-desc pl-4">
                                <a href="#" class="author-name">OAK Academy</a>
                                <p>
                                    Hi there,

                                    By 2024, there will be more than 1 million unfilled computing jobs and sthe skills gap is a global problem.
                                </p>
                                <div class="post-author-social-info">
                                    <a href="#"><i class="fa fa-facebook"></i></a>
                                    <a href="#"><i class="fa fa-twitter"></i></a>
                                    <a href="#"><i class="fa fa-pinterest"></i></a>
                                    <a href="#"><i class="fa fa-linkedin"></i></a>
                                    <a href="#"><i class="fa fa-dribbble"></i></a>
                                </div>
                            </div>
                        </div>

                        <!-- Comment Area Start -->
                        <div class="comment_area clearfix mb-50">

                            <!-- Section Title -->
                            <div class="section-heading style-2">
                                <h4>Comment</h4>
                                <div class="line"></div>
                            </div>

                            <ul>
                                @foreach (var item in Model.PostDetail.CommentList)
                                {
                                <li class="single_comment_area">
                                    <!-- Comment Content -->
                                    <div class="comment-content d-flex">
                                        <div class="comment-meta">
                                            <a href="#" class="comment-date">@item.AddDate.ToString("dd.MM.yyyy, dddd")</a>
                                            <h6>@item.Name</h6>
                                            <p>@item.CommentContent</p>
                                            <div class="d-flex align-items-center">
                                            </div>
                                        </div>
                                    </div>

                                    
                                </li>
                                }
                            </ul>
                        </div>

                        <!-- Post A Comment Area -->
                        <div class="post-a-comment-area">

                            <!-- Section Title -->
                            <div class="section-heading style-2">
                                <h4>Leave a reply</h4>
                                <div class="line"></div>
                            </div>

                            <!-- Reply Form -->
                            <div class="contact-form-area">
                                <form action="" method="post">
                                    <div class="row">
                                        <div class="col-12 col-lg-6">
                                            <input name="Name" type="text" class="form-control" id="name" placeholder="Your Name*">
                                        </div>
                                        <div class="col-12 col-lg-6">
                                            <input name="Email" type="email" class="form-control" id="email" placeholder="Your Email*">
                                        </div>
                                        <div class="col-12">
                                            <textarea name="Message" class="form-control" id="message" placeholder="Message*"></textarea>
                                        </div>
                                        <input hidden name="PostID" value="@Model.PostDetail.ID" />
                                        <div class="col-12">
                                            <button class="btn vizew-btn mt-30" type="submit">Submit Comment</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <!-- Sidebar Widget -->
            <div class="col-12 col-md-6 col-lg-4">
                <div class="sidebar-area">

                    <br />
                    <!-- ***** Single Widget ***** -->
                    <div class="single-widget mb-50">
                        <!-- Section Heading -->
                        <div class="section-heading style-2 mb-30">
                            <h4>Breaking posts</h4>
                            <div class="line"></div>
                        </div>
                        @foreach (var item in Model.BreakingPost)
                        {
                            <div class="single-blog-post d-flex">
                                <div class="post-thumbnail">
                                    <img src="~/Areas/Admin/Content/PostImage/@item.ImagePath" alt="">
                                </div>
                                <div class="post-content">
                                    <a href="@Url.RouteUrl("PostDetail", new {@ID=item.ID, @CategoryName=BLL.SeoLink.GenerateUrl(item.CategoryName), @SeoLink = item.SeoLink})" class="post-title">@item.Title</a>
                                    <div class="post-meta d-flex justify-content-between">
                                        <a href="#"><i class="fa fa-comments-o" aria-hidden="true"></i> @item.CommentCount</a>
                                        <a href="#"><i class="fa fa-eye" aria-hidden="true"></i> @item.ViewCount</a>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>

                    <!-- ***** Single Widget ***** -->
                    <div class="single-widget add-widget mb-50">
                        <a href="@Model.Adslist[0].Link" target="_blank"><img src="~/Areas/Admin/Content/AdsImage/@Model.Adslist[0].ImagePath" /></a>
                    </div>


                </div>
            </div>
        </div>
    </div>
</section>
<!-- ##### Post Details Area End ##### -->